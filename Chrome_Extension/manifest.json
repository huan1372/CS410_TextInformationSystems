{
    "manifest_version": 3,
    "name": "Code Summarizer",
    "version": "1.0",
    "description": "Summarize code with through CodeTransModel",
    "icons": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_title": "Click to summarize code"
    },
    "permissions": [
      "activeTab",
      "storage"
    ] 
  }
  